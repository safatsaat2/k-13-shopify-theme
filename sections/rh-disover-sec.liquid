<section
  class="rh-discover-section"
  {% if section.settings.background_image %}
    style="background-image: url('{{ section.settings.background_image | img_url: 'master' }}');"
  {% endif %}
>
  <div class="container_rh">
    {% if section.settings.title_part_1 or section.settings.title_part_2 or section.settings.title_part_3 %}
      <div class="discover-title-rh">
        {% if section.settings.title_part_1 %}{{ section.settings.title_part_1 }}{% endif %}
        {% if section.settings.title_part_2 %}<span>{{ section.settings.title_part_2 }}</span>{% endif %}
        {% if section.settings.title_part_3 %}{{ section.settings.title_part_3 }}{% endif %}
      </div>
    {% endif %}

    {% if section.settings.description %}
      <div class="discover-description-rh">
        {{ section.settings.description }}
      </div>
    {% endif %}

    <div class="cards-container-rh">
      {% for block in section.blocks %}
        <div class="discover-card-main-rh" {{ block.shopify_attributes }}>
          <div class="discover-card-content-rh">
            <div class="discover-card-text-wrapper-rh">
              {% if block.settings.title %}
                <div class="discover-card-title-rh" style="color: {{ block.settings.title_color }};">
                  {{ block.settings.title }}
                </div>
              {% endif %}

              {% if block.settings.description %}
                <div class="discover-card-description-rh">
                  {{ block.settings.description }}
                </div>
              {% endif %}
            </div>

            <div class="discover-card-link-rh">
              {% if block.settings.link_text and block.settings.link_url %}
                <a
                  href="{{ block.settings.link_url }}"
                  class="discover-card-link-text-rh"
                  style="color: {{ block.settings.link_color }};"
                >
                  {{ block.settings.link_text }}
                </a>
              {% endif %}

              {% if block.settings.icon_svg %}
                <div class="card-icon">
                  {{ block.settings.icon_svg }}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% style %}
  .rh-discover-section {
    padding: 80px 20px;
    background: url(./images/discover-bg.png) no-repeat center center;
    background-size: cover;
  }

  .rh-discover-section .container_rh {
    width: 100%;
    max-width: 1302px;
    margin: 0 auto;
  }

  .rh-discover-section .container_rh .discover-title-rh {
    font-family: "Luckiest Guy", cursive;
    font-weight: 400;
    font-style: normal;
    font-size: 52px;
    line-height: 120%;
    letter-spacing: 0px;
    text-align: center;
    color: #05203e;
    max-width: 887px;
    margin: 0 auto;
  }

  .rh-discover-section .container_rh .discover-title-rh span {
    color: #f47804;
  }

  .rh-discover-section .container_rh .discover-description-rh {
    font-family: "Comic Neue", cursive;
    font-weight: 700;
    font-size: 28px;
    line-height: 120%;
    letter-spacing: 0%;
    text-align: center;
    color: #0c0c0c;
    margin: 16px 0 60px;
  }

  /* ===== DISCOVER SECTION CARDS ===== */
  .rh-discover-section .cards-container-rh {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: clamp(16px, 2vw, 24px);
    max-width: 1302px;
    margin: 0 auto;
  }

  .discover-card-main-rh {
    background: white;
    border-radius: 12px;
    padding: 24px;
    min-height: 320px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .discover-card-main-rh:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .discover-card-content-rh {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .discover-card-text-wrapper-rh {
    margin-bottom: 24px;
  }

  .discover-card-title-rh {
    font-family: "Comic Neue", cursive;
    font-weight: 700;
    font-size: clamp(18px, 2vw, 24px);
    line-height: 1.2;
    margin-bottom: 16px;
  }

  .discover-card-description-rh {
    font-family: "Lato", sans-serif;
    font-weight: 400;
    font-size: clamp(14px, 1.5vw, 16px);
    line-height: 1.5;
    color: #05203e;
    margin-bottom: 0;
  }

  .discover-card-link-rh {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    transition: color 0.2s ease;
  }

  .discover-card-link-text-rh {
    font-family: "Lato", sans-serif;
    font-weight: 700;
    font-size: clamp(14px, 1.4vw, 16px);
    cursor: pointer;
    text-decoration: none;
  }

  .discover-card-link-rh svg {
    width: clamp(48px, 6vw, 62px);
    height: clamp(48px, 6vw, 62px);
    flex-shrink: 0;
  }

  /* ===== CARD ICON STYLING ===== */
  .card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-icon svg {
    width: clamp(48px, 6vw, 62px);
    height: clamp(48px, 6vw, 62px);
    flex-shrink: 0;
  }

  /* ===== RESPONSIVE GRID LAYOUTS ===== */
  @media (max-width: 1200px) {
    .rh-discover-section {
      padding: 60px 20px;
    }

    .rh-discover-section .cards-container-rh {
      grid-template-columns: repeat(3, 1fr);
      gap: clamp(16px, 2.5vw, 20px);
    }
  }

  @media (max-width: 900px) {
    .rh-discover-section .cards-container-rh {
      grid-template-columns: repeat(2, 1fr);
      gap: clamp(16px, 3vw, 20px);
    }
  }

  @media (max-width: 600px) {
    .rh-discover-section .cards-container-rh {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .discover-card-main-rh {
      padding: 20px;
      min-height: 240px;
    }

    .discover-card-title-rh {
      font-size: 20px;
    }

    .discover-card-description-rh {
      font-size: 14px;
    }

    .discover-card-link-rh svg {
      width: 48px;
      height: 48px;
    }
  }
{% endstyle %}

