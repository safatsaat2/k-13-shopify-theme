<style>
  .footer {
      background: {{ section.settings.background_color }};
      padding: 80px 0;
      /* min-height: 887px; */
      font-family: 'Inter', sans-serif;
      line-height: 1.2;
  }

  .footer-container {
      max-width: 1320px;
      margin: 0 auto;
      padding: 0 20px;
  }

  .contact-section {
      border-bottom: 1.54px solid rgba(255, 255, 255, 0.10);
      padding-bottom: 36px;
      margin-bottom: 36px;
  }

  .contact-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
  }

  .contact-item {
      display: flex;
      align-items: center;
      gap: 26px;
      min-height: 52px;
  }

  .contact-icon {
      width: 52px;
      height: 51px;
      {% comment %} background: white; {% endcomment %}
      border-radius: 50%;
      position: relative;
      flex-shrink: 0;
      display: flex;
      align-items: center;
      justify-content: center;
  }

  .contact-info {
      flex: 1;
  }

  .contact-main {
      color: white;
      font-size: 16.88px;
      font-weight: 600;
      line-height: 21.60px;
      margin-bottom: 1px;
  }

  .contact-sub {
      color: rgba(255, 255, 255, 0.30);
      font-size: 15.25px;
      font-weight: 400;
      line-height: 19.20px;
    letter-spacing: normal;
  }

  .content-section {
      border-bottom: 1.54px solid rgba(255, 255, 255, 0.10);
      padding-bottom: 36px;
      margin-bottom: 36px;
  }

  .content-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 90px;
      margin-bottom: 43px;
  }

  .content-column {
      display: flex;
      flex-direction: column;
      gap: 25px;
  }

  .content-title {
      color: white;
      font-size: 21.66px;
      font-family: 'Lato', sans-serif;
      font-weight: 700;
      line-height: 26.40px;
      margin-bottom: 0;
  }

  .content-links {
      display: flex;
      flex-direction: column;
      gap: 15px;
  }

  .content-link {
      color: rgba(255, 255, 255, 0.60);
      font-size: 15.88px;
      font-weight: 400;
      line-height: 19.20px;
      text-decoration: none;
      transition: color 0.3s ease;
      display: flex;
      align-items: center;
      gap: 8px;
  }

  .content-link:hover {
      color: white;
  }

  .content-link svg {
      width: 13px;
      height: 13px;
      opacity: 0.6;
  }

  .bottom-section {
      display: flex;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 126px;
      align-items: start;
      justify-content: space-between;
  }

  .license-card {
      border: 1px dashed rgba(217, 217, 217, 0.20);
      border-radius: 12px;
      height: 124px;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: space-between;
      max-width: 260px;
      width: 100%;
  }

  .license-text {
      color: white;
      font-size: 17.02px;
      font-weight: 600;
      line-height: 21.60px;
      z-index: 2;
      position: relative;
      padding: 20px;
  }

  .license-icon {
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
      width: 60px;
      height: 60px;
      background: linear-gradient(156deg, rgba(255, 255, 255, 0.37) 0%, rgba(255, 255, 255, 0.13) 100%);
      border-radius: 8px;
  }

  .footer-bottom {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 80px;
  }

  .footer-logo {
      display: flex;
      align-items: center;
      gap: 31px;
  }

  .logo {
      width: 77px;
      height: 62px;
      background: white;
      border-radius: 4px;
  }

  .copyright {
      color: rgba(255, 255, 255, 0.60);
      font-size: 11.44px;
      font-weight: 300;
      line-height: 19.20px;
      max-width: 444px;
    letter-spacing: normal;
  }

  .social-links {
      display: flex;
      gap: 12px;
  }

  .social-link {
      width: 48px;
      height: 48px;
      background: rgba(255, 255, 255, 0.10);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.3s ease;
  }

  .social-link:hover {
      background: rgba(255, 255, 255, 0.20);
  }

  .social-icon {
      {% comment %} width: 20px;
      height: 20px;
      fill: white; {% endcomment %}
  }

  .scroll-top {
      width: 48px;
      height: 48px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: background-color 0.3s ease;
      margin-left: auto;
  }

  .scroll-top:hover {
      background: #f0f0f0;
  }

  .scroll-icon {
      width: 20px;
      height: 18px;
      background: {{ section.settings.background_color }};
      clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
      .content-grid {
          gap: 60px;
      }

      .bottom-section {
          display: grid;
          gap: 80px;
      }
  }

  @media (max-width: 768px) {
      .footer {
          padding: 40px 0;
      }

      .contact-grid {
          grid-template-columns: 1fr;
          gap: 15px;
      }

      .content-grid {
          grid-template-columns: repeat(2, 1fr);
          gap: 40px;
      }

      .bottom-section {
          grid-template-columns: 1fr;
          gap: 40px;
      }

      .footer-bottom {
          flex-direction: column;
          text-align: center;
      }

      .footer-logo {
          flex-direction: column;
          gap: 15px;
      }
      .scroll-top{
          margin: auto;
      }
      .footer-bottom{
          gap: 20px;
      }
  }

  @media (max-width: 480px) {
      .content-grid {
          grid-template-columns: 1fr;
      }

      .contact-item {
          flex-direction: column;
          text-align: center;
          gap: 15px;
      }

      .social-links {
          justify-content: center;
      }
  }
</style>

<footer class="footer">
  <div class="footer-container">
    <!-- Contact Section -->
    {% if section.blocks.size > 0 %}
      <div class="contact-section">
        <div class="contact-grid">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'contact_info' %}
                <div class="contact-item" {{ block.shopify_attributes }}>
                  {% if block.settings.icon_svg != blank %}
                    <div class="contact-icon">
                      {{ block.settings.icon_svg }}
                    </div>
                  {% endif %}
                  <div class="contact-info">
                    <div class="contact-main">{{ block.settings.main_text }}</div>
                    <div class="contact-sub">{{ block.settings.sub_text }}</div>
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <!-- Content Section -->
    <div class="content-section">
