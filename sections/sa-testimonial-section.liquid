<style>
  .testimonials-section {
      max-width: 100%;
      margin: 0 auto;
      position: relative;
      min-height: 100vh;
      background: linear-gradient({{ section.settings.gradient_angle }}deg, {{ section.settings.gradient_color_1 }} 1%, {{ section.settings.gradient_color_2 }} 66%);
      padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
      overflow: hidden;
  }

  .testimonials-section .background-decoration {
      width: 100%;
      pointer-events: none;
  }
  .testimonials-section  .background-decoration svg{
      position: absolute;
      /* left: 50%; */
      top: 0;
      /* width: 100%; */
  }

  .testimonials-section .testimonials-container {
      max-width: 1374px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 48px;
  }

  .testimonials-section  .testimonials-title {
      text-align: center;
      color: white;
      font-size: 52px;
      font-family: 'Luckiest Guy', cursive;
      font-weight: 400;
      line-height: 62.40px;
      word-wrap: break-word;
  }

  .testimonials-section  .testimonials-carousel {
      width: 100%;
      position: relative;
  }

  .testimonials-section .srs-swiper {
      max-width: 1250px;
      width: 100%;
  }

  .testimonials-section   .swiper-slide {
      height: auto;
  }

  .testimonials-section  .carousel-button {
      width: 48px;
      height: 48px;
      background: white;
      border: none;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      transition: all 0.3s ease;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      z-index: 10;
  }

  .testimonials-section  .carousel-button:hover {
      background: #f0f0f0;
      transform: translateY(-50%) scale(1.05);
  }

  .testimonials-section  .carousel-button.prev {
      left: 0;
  }

  .testimonials-section  .carousel-button.next {
      right: 0;
  }

  .testimonials-section  .carousel-arrow {
      width: 19.67px;
      height: 11.59px;
      background: black;
      clip-path: polygon(0 50%, 100% 0, 100% 100%);
  }

  .testimonials-section  .carousel-button.prev .carousel-arrow {
      transform: rotate(180deg);
  }

  .testimonials-section  .testimonial-card {
      background: white;
      border-radius: 10px;
      outline: 1px dashed #1B1B1B;
      outline-offset: -1px;
      padding: 33.92px 29.34px;
      display: flex;
      flex-direction: column;
      gap: 30px;
  }

  .testimonials-section  .testimonial-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      /* gap: 126px; */
  }

  .testimonials-section  .testimonial-author {
      display: flex;
      align-items: center;
      gap: 15px;
  }

  .testimonials-section  .author-name {
      color: #0E2A46;
      font-size: 21px;
      font-weight: 700;
      line-height: 18.70px;
  }

  .testimonials-section  .testimonial-rating {
      display: flex;
      gap: 5.11px;
  }

  .testimonials-section  .star {
      width: 17.06px;
      height: 17.03px;
      background: #FF4F00;
      clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
  }

  .testimonials-section  .testimonial-text {
      color: #333931;
      font-size: 17px;
      font-weight: 400;
      line-height: 32.30px;
      flex: 1;
      display: flex;
      align-items: center;
  }

  .testimonials-section  .content-sections {
      display: flex;
      flex-direction: column;
      gap: 20px;
      width: 100%;
      max-width: 1250px;
  }

  .testimonials-section  .hero-image {
      width: 100%;
      height: 420px;
      background: linear-gradient(0deg, rgba(0, 0, 0, 0.20) 0%, rgba(0, 0, 0, 0.20) 100%);
      border-radius: 8px;
      position: relative;
      overflow: hidden;
  }

  .hero-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
  }

  .testimonials-section  .hero-video {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: none;
  }

  .testimonials-section  .play-button {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 96px;
      height: 99.08px;
      background: white;
      border-radius: 48.77px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
      z-index: 10;
  }

  .testimonials-section  .play-button:hover {
      transform: translate(-50%, -50%) scale(1.1);
  }

  .testimonials-section  .play-button.playing {
      opacity: 0;
      pointer-events: none;
  }

  .testimonials-section  .play-icon {
      width: 38.71px;
      height: 38.71px;
      background: #05203E;
      clip-path: polygon(0 0, 0 100%, 100% 50%);
  }

  /* Responsive Design */
  @media (max-width: 1280px) {
      .testimonials-section {
          padding: 60px 15px;
      }

      .testimonials-section  .testimonials-title {
          font-size: 42px;
          line-height: 50px;
      }

      .testimonials-section  .testimonial-card {
          height: 240px;
          padding: 25px 20px;
      }

      .testimonials-section  .testimonial-header {
          gap: 80px;
      }

      .testimonials-section  .author-name {
          font-size: 18px;
      }

      .testimonials-section  .testimonial-text {
          font-size: 15px;
          line-height: 28px;
      }
  }

  @media (max-width: 768px) {
      .testimonials-section {
          padding: 40px 10px;
      }

      .testimonials-section  .testimonials-title {
          font-size: 32px;
          line-height: 38px;
      }

      .testimonials-section  .srs-swiper {
          padding: 0 50px;
      }

      .testimonials-section  .carousel-button {
          width: 40px;
          height: 40px;
      }

      .testimonials-section  .testimonial-card {
          height: 220px;
          padding: 20px 15px;
      }

      .testimonials-section  .testimonial-header {
          gap: 60px;
      }

      .testimonials-section  .author-name {
          font-size: 16px;
      }

      .testimonials-section  .testimonial-text {
          font-size: 14px;
          line-height: 24px;
      }

      .testimonials-section  .content-section {
          height: 300px;
      }

      .testimonials-section  .hero-image {
          height: 400px;
      }

      .testimonials-section  .play-button {
          width: 80px;
          height: 80px;
      }

      .testimonials-section  .play-icon {
          width: 30px;
          height: 30px;
      }
  }

  @media (max-width: 480px) {
      .testimonials-section  .testimonials-title {
          font-size: 28px;
          line-height: 32px;
      }

      .testimonials-section  .srs-swiper {
          padding: 0 40px;
          overflow: hidden;
      }

      .testimonials-section  .testimonial-card {
          height: 200px;
          padding: 15px 12px;
      }

      .testimonials-section  .testimonial-header {
          gap: 40px;
      }

      .testimonials-section  .author-name {
          font-size: 14px;
      }

      .testimonials-section  .testimonial-text {
          font-size: 13px;
          line-height: 20px;
      }

      .testimonials-section  .content-section {
          height: 250px;
      }

      .testimonials-section  .hero-image {
          height: 300px;
      }
  }
</style>
