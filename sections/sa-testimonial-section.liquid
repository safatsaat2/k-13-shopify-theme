<script>
  document.addEventListener('DOMContentLoaded', function() {
      // Check if Swiper is available
      if (typeof Swiper !== 'undefined') {
          const swiper = new Swiper('.testimonials-swiper', {
              slidesPerView: {{ section.settings.slides_per_view_desktop }},
              spaceBetween: {{ section.settings.space_between }},
              {% if section.settings.autoplay %}
              autoplay: {
                  delay: {{ section.settings.autoplay_speed | times: 1000 }},
                  disableOnInteraction: false,
              },
              {% endif %}
              navigation: {
                  nextEl: '.carousel-button.next',
                  prevEl: '.carousel-button.prev',
              },
              breakpoints: {
                  320: {
                      slidesPerView: {{ section.settings.slides_per_view_mobile }},
                      spaceBetween: {{ section.settings.space_between }}
                  },
                  768: {
                      slidesPerView: {{ section.settings.slides_per_view_tablet }},
                      spaceBetween: {{ section.settings.space_between }}
                  },
                  1024: {
                      slidesPerView: {{ section.settings.slides_per_view_desktop }},
                      spaceBetween: {{ section.settings.space_between }}
                  }
              }
          });
      } else {
          console.warn('Swiper library not loaded. Testimonials carousel will not function.');
      }

      // Video functionality
      const playButton = document.getElementById('playButton');
      const video = document.querySelector('.hero-video');
      const heroImage = document.querySelector('.hero-image img');

      if (playButton && video) {
          playButton.addEventListener('click', function() {
              if (video.paused) {
                  // Start video
                  video.play();
                  video.style.display = 'block';
                  heroImage.style.display = 'none';
